@model ResultDTO<CategoryDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row mt-3">
    <div class="col-md-12 mb-3">
        <button type="button" data-toggle="modal" data-target="#addModal" class="btn btn-outline-success">Yeni Kategori Ekle</button>
    </div>
    @if (Model.DataList.Count > 0)
    {
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-header"><i class="fas fa-table mr-1"></i>Kategoriler</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Güncelleme Tarihi</th>
                                    <th>Güncelle</th>
                                    <th>Pasif Yap</th>
                                </tr>
                            </thead>
                            <tbody id="TableBody">
                                @foreach (var item in Model.DataList.OrderByDescending(x => x.CreateDate))
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@(item.UpdateDate==null?item.CreateDate:item.UpdateDate)</td>
                                        <td><button class="btn btn-outline-warning">Güncelle</button></td>
                                        <td><button class="btn @(item.Status==true?"btn-outline-success":"btn-outline-danger")">@(item.Status==true?"Pasif Yap":"Aktif Yap")</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-md-12">
            <p>Gösterilecek Kategori Bulunamadı</p>
        </div>
    }
</div>

